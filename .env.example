# Data sources: fhir | healthex | both (default: both)
DATA_SOURCES=both

# LLM
ANTHROPIC_API_KEY=

# HSID Identity Provider (OIDC PKCE) — always required for user identity
HSID_ISSUER_URL=https://nonprod.identity.healthsafe-id.com
HSID_CLIENT_ID=
HSID_REDIRECT_URI=http://localhost:4111/auth/callback

# AWS HealthLake FHIR — required when DATA_SOURCES includes fhir
FHIR_BASE_URL=https://<healthlake-endpoint>/datastore/<id>/r4

# Storage (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/hte

# HealthEx MCP (OAuth 2.0 PKCE)
HEALTHEX_CLIENT_ID=
HEALTHEX_REDIRECT_URI=http://localhost:4222/healthex/callback

# Server
MCP_HTTP_PORT=3001
NODE_ENV=development
